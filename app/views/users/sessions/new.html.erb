<%= render 'shared/errors',obj: @user %>
<div class="row">
  <div class="col-md-offset-4 col-md-4 login_back">
    
    <h1 class="center">Login</h1>
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name,html:{class:"form-horizontal",role:"form"}, url: session_path(resource_name)) do |f| %>
  
      <div class="form-group">
        <div class="col-md-12"> 
        <%= f.email_field :email, autofocus: true,placeholder:"Enter email..",class:"form-control" , autocomplete: "email" %>
      </div>
      </div>
      <div class="form-group">  
        <div class="col-md-12">   
        <%= f.password_field :password,placeholder:"Enter password..",class:"form-control", autocomplete: "current-password" %>
       </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
  <div class="form-group">
      <div class="col-md-12">
        <%= f.submit "Log in",class:"btn btn-md btn-success col-sm-12"  %>
    </div>
  </div>
    <% end %>

<%= render "users/shared/links" %>

  </div>
  </div>
</div>