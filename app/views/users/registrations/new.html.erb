<%= render 'shared/errors',obj: @user %>
<div class="row">
  <div class="col-md-offset-2 col-md-8 signup_back">
     <h1 class="center">Signup</h1>
  <div class="col-md-offset-1 col-md-11">
      <%= form_for(resource, as: resource_name,html:{class:"form-horizontal",role:"form"}, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :name %>
          </div>
        <div class="col-md-8"> 
          <%= f.text_field :username, autofocus: true,placeholder:"Enter Name..",class:"form-control", autocomplete: "username" %>
        </div>
      </div>
     <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8"> 
          <%= f.email_field :email,placeholder:"Enter email..",class:"form-control" , autofocus: true, autocomplete: "email" %>
         </div>
      </div>
     <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :gender%> 
        </div>
         <div class="col-md-1">  
          <%= f.radio_button :gender,"male",class:"" %>
        </div>
         <div class="col-md-1">  
          <%= f.label :male,class:""%>
        </div>
         <div class="col-md-1">  
          <%= f.radio_button :gender,"female",class:"" %>
         </div> 
          <div class="col-md-1">   
          <%= f.label :female,class:""%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :image%>
        </div>
        <div class="col-md-8">  
          <%= f.file_field :profile_image,class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
          <div class="col-md-8">
          <%= f.password_field :password,placeholder:"Enter password..",class:"form-control" , autocomplete: "new-password" %>
        </div>
      </div>
    <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="col-md-8">  
          <%= f.password_field :password_confirmation,placeholder:"Enter password..",class:"form-control" , autocomplete: "new-password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <%= f.submit "Sign up",class:"btn btn-md btn-success col-md-12"  %>
        </div>
      </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>